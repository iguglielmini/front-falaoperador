// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"

}

enum PerfilUsuario {
  ADMIN
  USUARIO
}

enum StatusTarefa {
  PENDENTE
  EM_PROGRESSO
  CONCLUIDA
  CANCELADA
}

enum PrioridadeTarefa {
  BAIXA
  MEDIA
  ALTA
  URGENTE
}

model User {
  id              String         @id @default(uuid())
  nome            String
  sobrenome       String
  email           String         @unique
  password        String
  telefone        String
  dataNascimento  DateTime
  perfil          PerfilUsuario  @default(USUARIO)
  emailVerified   Boolean        @default(false)
  image           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  sessions        Session[]
  accounts        Account[]
  tarefas         Tarefa[]

  @@map("users")
}

model Tarefa {
  id          String            @id @default(uuid())
  titulo      String
  descricao   String?
  status      StatusTarefa      @default(PENDENTE)
  prioridade  PrioridadeTarefa  @default(MEDIA)
  publica     Boolean           @default(false)
  dataInicio  DateTime?
  dataFim     DateTime?
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@map("tarefas")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  accountId         String
  providerId        String
  accessToken       String?
  refreshToken      String?
  idToken           String?
  expiresAt         DateTime?
  password          String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verifications")
}
